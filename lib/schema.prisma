generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  avatar        String?
  role          UserRole  @default(STUDENT)
  bio           String?
  skills        String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationships
  studentProfile StudentProfile?
  freelancer     Freelancer?
  orders         Order[]
  reviews        Review[]

  @@map("users")
}

model StudentProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  university  String
  major       String
  year        Int
  gpa         Float?
  transcript  String?
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("student_profiles")
}

model Freelancer {
  id          String   @id @default(cuid())
  userId      String   @unique
  title       String
  description String
  hourlyRate  Float
  category    String
  tags        String[]
  isActive    Boolean  @default(true)
  rating      Float    @default(0)
  completedJobs Int    @default(0)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  services    Service[]
  reviews     Review[]

  @@map("freelancers")
}

model Service {
  id           String   @id @default(cuid())
  freelancerId String
  title        String
  description  String
  price        Float
  category     String
  tags         String[]
  deliveryTime Int    // in days
  isActive     Boolean @default(true)
  createdAt    DateTime @default(now())

  freelancer   Freelancer @relation(fields: [freelancerId], references: [id], onDelete: Cascade)
  orders       Order[]

  @@map("services")
}

model Order {
  id          String     @id @default(cuid())
  customerId  String
  serviceId   String
  status      OrderStatus @default(PENDING)
  requirements String
  budget      Float
  deadline    DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  customer    User     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service     Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  messages    Message[]
  reviews     Review[]

  @@map("orders")
}

model Message {
  id        String   @id @default(cuid())
  orderId   String
  senderId  String
  content   String
  createdAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Review {
  id        String   @id @default(cuid())
  orderId   String   @unique
  reviewerId String
  freelancerId String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  order      Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  reviewer   User       @relation(fields: [reviewerId], references: [id], onDelete: Cascade)
  freelancer Freelancer @relation(fields: [freelancerId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

enum UserRole {
  STUDENT
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}